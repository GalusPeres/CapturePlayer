{
  "name": "captureplayer",
  "version": "0.1.0",
  "description": "Electron + Vite + React + Tailwind CapturePlayer â€“ Play your capture card instantly and share with Discord.",
  "author": {
    "name": "galusperes"
  },
  "license": "MIT",
  "main": "dist-electron/index.js",
  "productName": "CapturePlayer",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext ts,tsx --max-warnings 0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^1.2.0",
    "autoprefixer": "^10.4.16",
    "electron": "^13.6.9",
    "electron-builder": "^22.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.34.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^4.9.5",
    "vite": "^2.9.16",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "asar": true,
    "files": [
      "dist-electron/**",
      "dist-vite/**"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
